# ==================== AI MODELS ====================
# Gemini (Development - free tier available)
GOOGLE_API_KEY=your_gemini_api_key_here

# OpenAI (Production - GPT-5-nano and GPT-5)
OPENAI_API_KEY=your_openai_api_key_here

# Perplexity (Research + Trends - required)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ==================== DATABASE ====================
# Supabase (PostgreSQL + pgvector)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_key_here

# Database mode: supabase or chromadb (local)
DATABASE_MODE=supabase

# ==================== PAYMENT PROCESSING ====================
# Razorpay (India-focused payment processing)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# ==================== ENVIRONMENT ====================
# development or production
ENVIRONMENT=development

# ==================== MONITORING (Optional) ====================
# LangSmith (Agent monitoring and tracing)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=raptorflow-adapt
LANGCHAIN_TRACING_V2=false

# ==================== TIMEOUTS & RETRIES ====================
DEFAULT_TIMEOUT=30
MAX_RETRIES=3

# ==================== MODEL SELECTION ====================
# Leave these empty to use defaults (or override for testing)
# FAST_MODEL=gemini-2.0-flash-exp
# REASONING_MODEL=gemini-2.0-flash-thinking-exp
# EMBEDDING_MODEL=models/text-embedding-004
